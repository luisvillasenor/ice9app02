<div class="section-listing">
    <div class="section-options">
        <ul class="section-tabs">
            <li class="active"><%= link_to "All", home_index_url %></li>
            <li class="active"><%= link_to "Pending", home_pending_url %></li>
            <li class="active"><%= link_to "Paid", home_paid_url %></li>
            
        </ul>
        <div class="section-filter">
          <div class="section-row">
            <%= form_for(@get_order) do |f| %>
            <%= f.label :text %>
            <%= f.name_field :name, class: 'input-search' %>
            <%= f.submit "Submit", :disable_with => 'Submiting...' %>
            <% end %>
          
          </div>
        </div>
        <div class="section-content">
            <div class="section-row">
                <table class="table-section">
                  <thead>
                  <tr>
                      <th class="sortable">Order #</th>
                      <th class="sortable">Date</th>
                      <th class="sortable">Email</th>
                      <th class="sortable">Payment Status</th>
                      <th class="sortable">Total</th>
                      <th></th>
                  </tr>
                  </thead>
                  <tbody>
                      <% @order.each do |o| %>
                        <tr>
                          <td><%= o.name %> </a></td>
                          <td><%= o.created_at %></td>
                          <td><%= o.email %></td>
                          <td><%= o.financial_status %></td>
                          <td><%= number_to_currency o.total_price %></td>
                          <td><a href="#top" class="btn default">Cobrar</a></td>
                        </tr>
                      <% end %>
                      <% if @order.size == 0 %>
                        <em>No se encontraron ordenes</em>
                      <% end %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>
</div>        
